<Window x:Class="ASM_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASM_02"
        mc:Ignorable="d"
        Title="MatchGame" Height="650" Width="650">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Name="MainStackPanel" CanVerticallyScroll="True">
        <Grid>
            <Menu Name="menuGame" Width="{Binding ActualWidth, ElementName=MainStackPanel}" Height="30">
                <MenuItem Name="menuItemNewGame" Header="New game" Height="{Binding ActualHeight, ElementName=menuGame}" FontSize="14" Click="MenuItemNewGame_Click"/>
                <MenuItem Name="menuItemPause" Visibility="Collapsed" FontSize="14" Header="Pause" Click="menuItemPause_Click"/>
                <MenuItem Name="menuItemSettings" Header="Settings" FontSize="14">
                    <MenuItem Name="menuItemSetTimer" Header="Set timer" IsCheckable="True" Unchecked="menuItemSetTimer_Unchecked" Checked="menuItemSetTimer_Checked"/>
                    <MenuItem Name="menuItemGridSize" Header="Grid">
                        <WrapPanel>
                            <TextBlock Text="Rows = "/>
                            <TextBox Name="tbRows" Text="4" Width="35" Margin="0,0,15,0" LostKeyboardFocus="tbRows_LostKeyboardFocus"/>
                            <TextBlock Text="Columns = "/>
                            <TextBox Name="tbColumns" Text="4" Width="35" LostKeyboardFocus="tbColumns_LostKeyboardFocus"/>
                        </WrapPanel>
                    </MenuItem>
                    <MenuItem Name="menuItemVisibility" Header="Show all pictures" IsCheckable="True"/>
                    <MenuItem Name="menuItemScore" Header="Display score" IsCheckable="True" Checked="menuItemScore_Checked" Unchecked="menuItemScore_Unchecked"/>
                </MenuItem>
                <MenuItem Header="End game" Click="MenuItemEndGame_Click" FontSize="14"/>
            </Menu>
            <TextBlock Name="tblSetTime" Visibility="Hidden" Text="Timer = " Width="50" VerticalAlignment="Center" Margin="-50,0,0,0" FontSize="14"/>
            <TextBox Name="tbSetTime" Visibility="Hidden" Margin="50,0,0,0" Height="25" FontSize="14" VerticalContentAlignment="Center" Width="40"/>            
        </Grid>        
        <Grid Name="grdGame" Margin="0,20,0,0">
            <!--<Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="colDef" Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Column="0" Grid.Row="0" BorderThickness="1" BorderBrush="Black">
                              
            </Border>
            <Border MouseEnter="Border_MouseEnter" Grid.Column="0" Grid.Row="1" BorderThickness="1" BorderBrush="Black" Background="LightGray"/>
            <Border Grid.Column="1" Grid.Row="0" BorderThickness="1" BorderBrush="Black"/>
            <Border Grid.Column="1" Grid.Row="1" BorderThickness="1" BorderBrush="Black"/>
            <TextBlock Width="70" Height="70" Grid.Column="0" Grid.Row="0" Text="03" FontSize="20" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Width="80" Height="80" Grid.Column="1" Grid.Row="0" Text="🐤" FontSize="55" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Width="80" Height="80" Grid.Column="0" Grid.Row="1" Text="🐋" FontSize="55" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->
        </Grid>
        <TextBlock 
            Name="tblTime" 
            Margin="0,40,0,0" 
            FontSize="20"             
            TextAlignment="Center" 
            FontFamily="Arial"/>
        <TextBlock Name="tblClicksNumber" FontSize="14" Margin="10,0,0,0"/>
        <TextBlock Name="tblCombosNumber" FontSize="14" Margin="10,10,0,0"/>
        <TextBlock Name="tblPairsNumber" FontSize="14" Margin="10,10,0,0"/>
        <TextBlock Name="tblScore" FontSize="16" FontWeight="DemiBold" Margin="10,10,0,0"/>
    </StackPanel>
    </ScrollViewer>
</Window>
